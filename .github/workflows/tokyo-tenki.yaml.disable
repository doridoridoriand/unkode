name: "Tokyo Tenki"

on:
  push:
    branches: [master]
  pull_request:
    # The branches below must be a subset of the branches above
    branches: [master]
  schedule:
    - cron: '0 10 * * 1'
  workflow_dispatch:

jobs:
  analyse:
    name: Analyse
    runs-on: arc-runner-set
    steps:
      - name: Execute shell script
        run: |
          curl -s -H "Accept-Language: ${LANG%_*}" wttr.in/"${1:-Tokyo}"
